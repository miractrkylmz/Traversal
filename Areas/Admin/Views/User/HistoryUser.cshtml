@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "HistoryUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Kullanıcının Rezervasyon Geçmişi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Misafir Ad Soyad</th>
        <th>Rota</th>
        <th>Kişi Sayısı</th>
        <th>Tarih</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        {
            count += 1;
        }
        <tr>
            <td>@count</td>
            <td>###</td>
            <td>@item.Destination.City</td>
            <td>@item.PersonCount</td>
            <td>@item.ReservationDate.ToShortDateString()</td>
            <td><a href="#" class="btn btn-outline-primary">Detaylar</a></td>
        </tr>   
    }
</table>
