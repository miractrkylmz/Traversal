@using Traversal.Areas.Admin.Models
@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>API Ziyaterçi Listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Ülke</th>
        <th>Mail</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
        {
            <tr>
                <th>@item.VisitorID</th>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>@item.Mail</td>
                <td>@item.Mail</td>
                <td><a href="/Admin/VisitorAPI/UpdateVisitor/@item.VisitorID" class="btn btn-outline-warning">Güncelle</a></td>
                <td><a href="/Admin/VisitorAPI/DeleteVisitor/@item.VisitorID" class="btn btn-outline-danger">Sil</a></td>
            </tr> 
        }
</table>
<a href="/Admin/VisitorAPI/AddVisitor" class="btn btn-outline-primary">Yeni Ziyaretçi Girişi</a>

