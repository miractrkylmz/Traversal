@model EntityLayer.Concrete.Guide
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Rehber Ekleme Sayfası</h1>

<form method="post">
    <div class="form-group">
        @Html.Label("Ad Soyad")
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Açıklama")
        <textarea type="text" asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Resim")
        <input type="text" asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Twitter URL")
        <input cols="30" rows="5" class="form-control" asp-for="TwitterURL"/>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Instagram URL")
        <input cols="30" rows="5" class="form-control" asp-for="InstagramURL"/>
    </div>
    <br />
    <button class="btn btn-primary">Oluştur</button>
</form>

