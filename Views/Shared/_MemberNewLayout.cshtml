@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    Layout = null;
}
<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
@await Component.InvokeAsync("_MemberLayoutHead")

<body class="vertical-layout vertical-menu 2-columns   menu-expanded fixed-navbar" data-open="click" data-menu="vertical-menu" data-color="bg-gradient-x-purple-blue" data-col="2-columns">

    @await Component.InvokeAsync("_MemberLayoutTopBar")

    @* @await Component.InvokeAsync("_MemberLayoutNavbar") *@

    <div class="main-menu menu-fixed menu-light menu-accordion    menu-shadow " data-scroll-to-active="true" data-img="/Traversal-UyeTemaYeni/theme-assets/images/backgrounds/02.jpg">
        <div class="navbar-header">
            <ul class="nav navbar-nav flex-row">
                <li class="nav-item mr-auto">
                    <a class="navbar-brand" href="index.html">
                        <img class="brand-logo" alt="Chameleon admin logo" src="/Traversal-UyeTemaYeni/theme-assets/images/logo/logo.png" />
                        <h3 class="brand-text">Traversal</h3>
                    </a>
                </li>
                <li class="nav-item d-md-none"><a class="nav-link close-navbar"><i class="ft-x"></i></a></li>
            </ul>
        </div>
        <div class="main-menu-content">
            <ul class="navigation navigation-main" id="main-menu-navigation" data-menu="menu-navigation">
                <li class=" nav-item">
                    <a href="/Member/Dashboard/MemberDashboard"><i class="ft-home"></i><span class="menu-title" data-i18n="">Dashboard</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Profile/Index"><i class="ft-user"></i><span class="menu-title" data-i18n="">@localizer["Profilim"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Reservation/MyCurrentReservation"><i class="ft-calendar"></i><span class="menu-title" data-i18n="">@localizer["Aktif Rezv."]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Reservation/MyApprovalReservation"><i class="ft-clock"></i><span class="menu-title" data-i18n="">@localizer["Onay Bekleyen Rez."]</span></a>
                </li>
                <li class="active">
                    <a href="/Member/Reservation/MyOldReservation"><i class="ft-check-square"></i><span class="menu-title" data-i18n="">@localizer["Geçmiş Rezv."]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Reservation/NewReservation"><i class="ft-plus-square"></i><span class="menu-title" data-i18n="">@localizer["Yeni Rezervasyon"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Destination/Index"><i class="ft-map"></i><span class="menu-title" data-i18n="">@localizer["Tur Rotaları"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/LastDestinations/Index"><i class="ft-list"></i><span class="menu-title" data-i18n="">@localizer["Son Rotalar"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Destination/GetCitiesSearchByName"><i class="ft-search"></i><span class="menu-title" data-i18n="">@localizer["Rota Ara"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="/Member/Comment/Index"><i class="ft-message-square"></i><span class="menu-title" data-i18n="">@localizer["Yorumlarım"]</span></a>
                </li>
                <li class=" nav-item">
                    <a href="#"><i class="ft-log-out"></i><span class="menu-title" data-i18n="">@localizer["Çıkış Yap"]</span></a>
                </li>
            </ul>
        </div><a class="btn btn-danger btn-block btn-glow btn-upgrade-pro mx-1" href="/Default/Index" target="_blank">@localizer["Siteye Git"]</a>
        <div class="navigation-background"></div>
    </div>

    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-wrapper-before"></div>
            @await Component.InvokeAsync("_MemberLayoutHeadContent")
            <div class="content-body">
                @RenderBody()
            </div>
        </div>
    </div>

    @await Component.InvokeAsync("_MemberLayoutFooter")

    <script src="/Traversal-UyeTemaYeni/theme-assets/vendors/js/vendors.min.js" type="text/javascript"></script>
    <script src="/Traversal-UyeTemaYeni/theme-assets/js/core/app-menu-lite.js" type="text/javascript"></script>
    <script src="/Traversal-UyeTemaYeni/theme-assets/js/core/app-lite.js" type="text/javascript"></script>
</body>
</html>